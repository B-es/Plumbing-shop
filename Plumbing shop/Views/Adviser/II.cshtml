@{
	if (ViewData["Труба"] is null) ViewData["Труба"] = "none";
	else if (ViewData["Форсунка"] is null) ViewData["Форсунка"] = "none"; ;
}

<form style='display:@ViewData["Труба"]'>
	<div>
		<button class="btn btn-info" name="button" asp-controller="Adviser" asp-action="check" value="Горячий">Труба</button>
		<button class="btn btn-info" name="button" asp-controller="Adviser" asp-action="check" value="Холодный">Форсунка</button>
	</div>
</form>


<form style='display:@ViewData["Труба"]'>
